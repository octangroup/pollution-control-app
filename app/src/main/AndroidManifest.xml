<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rema.pollutioncontrol">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".controllers.SettingsActivity"
            android:label="@string/title_activity_settings"></activity>
        <activity
            android:name=".controllers.ActivityViewActivity"
            android:label="@string/title_activity_view" />
        <activity android:name=".controllers.HarvestActivity" />
        <activity android:name=".controllers.SearchActivity" />
        <activity android:name=".controllers.ViewPlaceActivity" />
        <activity android:name=".controllers.PlacesActivity" />
        <activity android:name=".controllers.FightClimateChangeActivity" />
        <activity android:name=".controllers.ViewCityActivity" />
        <activity android:name=".controllers.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>